<%= render 'header' %>

<div class="container-big big">
  <div class="container-big-card look" data-aos="zoom-in-right">
    <%= link_to article_path(@big) do %>
    <div class="info-between-big pb-3">
      <div><h2 style="color: #2F4F4F"><%= @big.name %></h2></div>
      <div><h4><%= @big.date %>  by Franck L.</h4></div>
    </div>
    <div class="big-card-container">
      <div class="big-card">
        <div><%= image_tag @big.photo.url %></div>
        <div class="description-big px-3"><h3><%= @big.description %> <%= @big.description %> <%= @big.description %> <%= @big.description %> <%= @big.description %></h3></div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="list-container" data-aos="zoom-in-left">
    <div class="yolo"><h3 class="pl-3">Ipsum Dolor mand : </h3></div>
    <div class="list-article">
      <% @articles.each do |article| %>
      <ul style="list-style:none">
        <%= link_to article_path(article) do %>
        <div class="li ligne-black">
          <div class="one"><p><%= article.date %></p></div>
          <div class="two"><p><%= article.name %></p></div>
        </div>
      </ul>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container card-grid mt-3">

    <% @articles.each do |article| %>
      <% if article.id > 94 %>
        <div class="card-index" data-aos="fade-up">
          <%= link_to article_path(article) do %>
          <div class="image"><%= image_tag article.photo.url %></div>
          <div class="info">
            <div class="info-between px-3">
              <div class="titre pt-2"><h4><%= article.name %></h4></div>
              <div class="titre pt-2"><p style="color: grey"><%= article.date  %> </p></div>
            </div>
            <div class="description px-3"><p><%= article.description %> <%= article.description %> <%= article.description %></p></div>
          </div>
          <% end %>
        </div>
      <% end %>
    <% end %>

</div>
<%= render 'footer' %>
